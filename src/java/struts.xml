<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default" namespace="/">
        <action name="login" class="haivt.strust2.LoginAction">
            <result name="success" type="chain">search</result>
            <result name="fail">login.jsp</result>
        </action> 
        <action name="search" class="haivt.strust2.SearchAction">
            <result name="success">search.jsp</result>
        </action> 
        <action name="logout" class="haivt.strust2.LogoutAction">
            <result name="success">login.jsp</result>
        </action>
        <action name="createAccount" class="haivt.strust2.CreateAccountAction">
            <result name="success">createaccount.jsp</result>
            <result name="input">createaccount.jsp</result>
        </action>
        <action name="verify" class="haivt.strust2.VerifyAction">
            <result name="success">login.jsp</result>
        </action>
        <action name="addToCart" class="haivt.strust2.AddToCartAction">
            <result name="success" type="chain">search</result>
        </action>
        <action name="submitRequest" class="haivt.strust2.SubmitRequestAction">
            <result name="success">cart.jsp</result>
            <result name="fail">cart.jsp</result>
        </action>
        <action name="searchListRequest" class="haivt.strust2.SearchListRequestAction">
            <result name="success">requestbooking.jsp</result>
        </action>
        <action name="deleteRequest" class="haivt.strust2.DeleteRequestAction">
            <result name="success">requestbooking.jsp</result>
        </action>
        <action name="acceptRequest" class="haivt.strust2.AcceptAction">
            <result name="success">requestbooking.jsp</result>
        </action>
        <action name="searchHistoryRequest" class="haivt.strust2.SearchHistoryRequestAction">
            <result name="success">historybooking.jsp</result>
        </action>
        <action name="deactiveRequest" class="haivt.strust2.DeactiveRequestAction">
            <result name="success">historybooking.jsp</result>
        </action>
        <action name="removeFromCart" class="haivt.strust2.RemoveFromCartAction">
            <result name="success">cart.jsp</result>
        </action>
    </package>
</struts>
